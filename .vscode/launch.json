  "version": "0.2.0",
  "configurations": [
    {
      "type": "OctaveDebugger",
      "request": "launch",
      "name": "Interactive Mode",
      "program": "",
      "octave": "octave-cli",
      "octaveArguments": [
        "--persist",
        "-i"
      ],
      "autoTerminate": false,
      "sourceFolder": "${workspaceFolder}",
      "workingDirectory": "${workspaceFolder}",
    },
    {
      "type": "OctaveDebugger",
      "request": "launch",
      "name": "Execute main file.",
      "program": "${workspaceFolder}/Examples/4 Warp Shell/W1_Warp_Shell.m",
      // "octave": "cd ${workspaceFolder} && octave-cli",
      "octave": "cd ${workspaceFolder} && docker compose run app octave-cli",
      "octaveArguments": [
        "--traditional",
        "--eval",
        "'addpath(genpath(\"${workspaceFolder}\", \"${workspaceFolder}/.git\")); source .octaverc'",
        //"'addpath(genpath(\"/app\", \"/app/.git\")); source .octaverc'",
      ],
      "workingDirectory": "${workspaceFolder}",
      "shell": true,
    },
    {
      "type": "OctaveDebugger",
      "request": "launch",
      "name": "Execute selected file.",
      "program": "${file}",
      // "octave": "cd ${workspaceFolder} && octave-cli",
      "octave": "cd ${workspaceFolder} && docker compose run app octave-cli",
      "octaveArguments": [
        "--traditional",
        "--eval",
        "'addpath(genpath(\"${workspaceFolder}\", \"${workspaceFolder}/.git\")); source .octaverc'",
      ],
      "workingDirectory": "${workspaceFolder}",
      "shell": true,
    },
    {
      "type": "OctaveDebugger",
      "request": "launch",
      "name": "Execute selected notebook.",
      "program": "",
      // "octave": "cd ${workspaceFolder} && octave-cli",
      "octave": "cd ${workspaceFolder} && docker compose run app octave",
      "octaveArguments": [
        "--traditional",
        "--eval",
        "'addpath(genpath(\"${workspaceFolder}\", \"${workspaceFolder}/.git\")); echo on; source .octaverc; notebook=jupyter_notebook(\"${file}\");'",
      ],
      "workingDirectory": "${workspaceFolder}",
      "shell": true,
      "autoTerminate": false,
    }
  ]
}